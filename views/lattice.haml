- content_for :header do
  = stylesheet_link_tag 'lattice'
  = javascript_include_tag 'lattice'
- content_for :title do
  %title= title_with_name('item matrix')
- content_for :leftbar do
  %p please see matrix

%table
  %tbody
    - 4.times do |i|
      %tr
        - 7.times do |j|
          %td{:id => "#{i}-#{j}", :class => 'none'}
%div{:id => 'items'}
  - @items.each_with_index do |item, idx|
    %div{:id => "item#{idx}", :class => 'item'}
      %a{:href => item.url, :alt => item.name}= image_tag(item.img)
